{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@hooks/*": ["./hooks/*"],
      "@lib": ["./lib/utils.ts"],
      "@utils": ["./utils/utils.ts"],
      "@animation-hook": ["./hooks/Animation/*"],
      "@array-hook": ["./hooks/Array*"],
      "@browser-hook": ["./hooks/Browser/*"],
      "@component-hook": ["./hooks/Component/*"],
      "@date-hook": ["./hooks/Date/*"],
      "@elements-hook": ["./hooks/Elements/*"],
      "@math-hook": ["./hooks/Math/*"],
      "@network-hook": ["./hooks/Network/*"],
      "@sensor-hook": ["./hooks/Sensors/*"],
      "@state-hook": ["./hooks/State/*"],
      "@utility-hook": ["./hooks/Utilities/*"],
      "@watch-hook": ["./hooks/Watch/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js",
    ".next/types/**/*.ts",
    "sadfsadf.ts"
  ],
  "exclude": ["node_modules"],
  "extends": "@vercel/style-guide/typescript/node18"
}
