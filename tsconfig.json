{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@ui-components/*": [
        "./components/UI/*"
      ],
      "@ui-containers": [
        "./components/Containers/*"
      ],
      "@lib": [
        "./lib/utils.ts"
      ],
      "@utils": [
        "./utils/utils.ts"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "jest.config.js",
    "middleware.js",
    "docs/state/createGlobalState/page.mdx",
    "hooks/Array/useArrayDifference/tsconfig.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
